      <%= div_for comment do %>
      <p>
        by <%= comment.user.email %>
        <br/>
        <strong> Posted <%= time_ago_in_words(comment.created_at) %> </strong>
        <br/>
        <%= h(comment.body) %><br/>
        <% if current_user.id == comment.user.id || current_user.role == 1 || current_user.role == 2 %>
        <%= link_to 'Edit', edit_review_comment_path(@review, comment) %>
        <%= link_to 'Destroy', review_comment_path(@review, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else%>
        <% end %>
      </p>
      <hr/>
    <%end%>